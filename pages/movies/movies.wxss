@import "movie-list/movie-list-tpl.wxss";
page{
  height:100%;
  background-color: #f2f2f2
}
.search-wrapper{
  display: flex;
  align-items: center;
  height:80rpx;
  line-height: 80rpx;
  padding:0 15rpx;
}
.search-wrapper .input-search{
  flex:1;
  font-size:30rpx;
  padding-left: 1em
}
.search-wrapper .search-icon{
  display: flex;
}
.movie-grid {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 20rpx 0;
}
.hasNoMovie{
  height:80rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  color:#666;
  background-color: #fff
}