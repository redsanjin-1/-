.post-item{
  margin-bottom: 20rpx;
  border-top:1px solid #eee;
  border-bottom:1px solid #eee;
  background-color: #fff;  
}
.post-item:last-child{
  border: none
}
.profile{
  margin-left: 20rpx;
  height:75rpx;
  line-height: 75rpx;
}
.profile .profile-img{
  display: inline-block;
  width:64rpx;
  height:64rpx;
  vertical-align: middle;
}
.profile .date{
  font-size: 20rpx;
  margin-left: 45rpx;
}
.title{
  font-weight: bold;
  font-size: 30rpx;
  height:80rpx;
  line-height: 80rpx;
  margin-left: 20rpx;
}
.post-img{
  display: block;
  width:100%
}
.content-wrapper{
  margin:22rpx 0;
  padding:0 20rpx;
}
.content-wrapper .content{
  line-height: 40rpx;
  font-size: 26rpx;
}
.info{
   height:50rpx; 
   line-height: 50rpx; 
  font-size: 12rpx;
}
.info .info-img{
  display: inline-block;  
  width:32rpx;
  height:32rpx;
   vertical-align: -4rpx; 
  margin: 0 18rpx
}
.info .collection,
.info .reading{
  line-height: 45rpx
}